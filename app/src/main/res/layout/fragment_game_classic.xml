<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.lifecycle.MutableLiveData"/>
        <import type="com.matematik.antremani.model.view.ToolScreen" />
        <variable name="bonusListener" type="com.matematik.antremani.impl.BonusImpl" />
        <variable name="tool" type="MutableLiveData&lt;ToolScreen&gt;" />
        <variable name="viewModel" type="com.matematik.antremani.viewmodel.view.game.GameClassicViewModel" />
    </data>

    <LinearLayout
        style="@style/fragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.screen.game.GameClassicFragment">

        <include
            android:id="@+id/includeGameTool"
            layout="@layout/include_game_tool"
            app:tool="@{tool}"
            app:bonusListener="@{bonusListener}"/>

        <LinearLayout
            style="@style/gameScreenUserInteraction"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="2"
                android:background="@drawable/shape_corner_box"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtClassicQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="15dp"
                    android:text="@{viewModel.screen.questionText}"
                    android:textColor="@color/questionText"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="35sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <Button
                android:id="@+id/btnClassicFirstSelect"
                style="@style/optionButton"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.optionControl(btnClassicFirstSelect.getText().toString())}"
                android:visibility="@{viewModel.screen.optionFirstVisibility}"
                android:text="@{viewModel.screen.optionFirst}" />

            <Button
                android:id="@+id/btnClassicSecondSelect"
                style="@style/optionButton"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.optionControl(btnClassicSecondSelect.getText().toString())}"
                android:visibility="@{viewModel.screen.optionSecondVisibility}"
                android:text="@{viewModel.screen.optionSecond}" />

            <Button
                android:id="@+id/btnClassicThirdSelect"
                style="@style/optionButton"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.optionControl(btnClassicThirdSelect.getText().toString())}"
                android:visibility="@{viewModel.screen.optionThirdVisibility}"
                android:text="@{viewModel.screen.optionThird}" />

            <Button
                android:id="@+id/btnClassicFourthSelect"
                style="@style/optionButton"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.optionControl(btnClassicFourthSelect.getText().toString())}"
                android:visibility="@{viewModel.screen.optionFourthVisibility}"
                android:text="@{viewModel.screen.optionFourth}" />

        </LinearLayout>

    </LinearLayout>

</layout>
