<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="ring"
            android:useLevel="false">

        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0">
            <shape
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="true">
                <gradient
                    android:startColor="@color/progressbarEnd"
                    android:centerColor="@color/progressbarEnd"
                    android:endColor="@color/progressbarStart"
                    android:type="sweep">
                </gradient>
            </shape>
        </rotate>
    </item>
</layer-list>